{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Theft data",
  "title": {
    "text": "Homicides in Mexico",
    "subtitle": "Per 100,000 people, 1990-2024",
    "subtitleColor": "#2E294E",
    "fontSize": 18,
    "font": "sans-serif",
    "anchor": "start",
    "offset": 20
  },
  "background": "#F5F2EB",
  "padding": {"left": 10, "top": 10, "right": 10, "bottom": 10},
  "spacing": 20,
  "vconcat": [
    {
      "width": 600,
      "height": 400,
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/Homicides%20per%20100k_INEGI.csv"
      },
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 80, "color": "#E4007C"},
        "color": "#E4007C",
        "strokeWidth": 3,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d",
            "labelFontSize": 11,
            "titleFontSize": 12,
            "grid": false
          }
        },
        "y": {
          "field": "Homicides 100",
          "type": "quantitative",
          "title": "",
          "axis": {
            "labelFontSize": 11,
            "titleFontSize": 12,
            "grid": true,
            "gridColor": "#2E294E",
            "gridOpacity": 0.1
          }
        },
        "tooltip": [
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {
            "field": "Homicides 100",
            "type": "quantitative",
            "title": "Homicides per 100k",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "width": 600,
      "height": 20,
      "layer": [
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 50,
            "fontSize": 10,
            "color": "#2E294E",
            "text": "Source:"
          }
        },
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 90,
            "fontSize": 10,
            "fontStyle": "italic",
            "color": "#2E294E",
            "text": "Instituto Nacional de Estadística y Geografía (INEGI)"
          }
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}}
}