{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#F5F2EB",
  "padding": {"left": 20, "top": 10, "right": 10, "bottom": 10},
  "title": {
    "text": "UK Regional Unemployment Rates (2015-2025)",
    "subtitle": "Interactive selection via dropdown menu. Source: ONS",
    "subtitleColor": "#2E294E",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 10,
    "offset": 15
  },
  "width": 400,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/uk_unemployment_by_region.csv"
  },
  "params": [
    {
      "name": "selectRegion",
      "select": {"type": "point", "fields": ["Region"]},
      "bind": {
        "input": "select",
        "options": [
          null,
          "North East",
          "North West",
          "Yorkshire and the Humber",
          "East Midlands",
          "West Midlands",
          "East",
          "London",
          "South East",
          "South West"
        ],
        "labels": [
          "Show All Regions",
          "North East",
          "North West",
          "Yorkshire and the Humber",
          "East Midlands",
          "West Midlands",
          "East",
          "London",
          "South East",
          "South West"
        ],
        "name": "Region: "
      }
    }
  ],
  "mark": {"type": "line", "point": {"size": 30}, "strokeWidth": 2.5},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "title": "Year",
      "axis": {
        "format": "d",
        "grid": false,
        "labelFontSize": 10,
        "titleFontSize": 11,
        "labelColor": "#2E294E",
        "titleColor": "#2E294E"
      }
    },
    "y": {
      "field": "Unemployment_Rate",
      "type": "quantitative",
      "title": "Rate (%)",
      "axis": {
        "grid": true,
        "gridColor": "#2E294E",
        "gridOpacity": 0.1,
        "labelFontSize": 10,
        "titleFontSize": 11,
        "labelColor": "#2E294E",
        "titleColor": "#2E294E"
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
        "range": [
          "#E4007C",
          "#2E294E",
          "#AACC00",
          "#F1BF3A",
          "#C1666B",
          "#4ECDC4",
          "#D4A574",
          "#7B2CBF",
          "#1B998B"
        ]
      },
      "legend": {
        "titleFontSize": 10,
        "labelFontSize": 9,
        "labelColor": "#2E294E",
        "titleColor": "#2E294E"
      }
    },
    "opacity": {
      "condition": {"param": "selectRegion", "value": 1},
      "value": 0.1
    },
    "tooltip": [
      {"field": "Region", "type": "nominal"},
      {"field": "Year", "type": "quantitative"},
      {
        "field": "Unemployment_Rate",
        "type": "quantitative",
        "title": "Rate (%)",
        "format": ".1f"
      }
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {
      "domainColor": "#2E294E",
      "domainOpacity": 0.3,
      "tickColor": "#2E294E"
    }
  }
}