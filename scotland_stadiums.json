{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "title": {
        "text": "Stadiums in Scotland",
        "subtitle": "Venues with a capacity of over 10k people"
      },
      "width": 400,
      "height": 500,
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/scotland.topojson",
            "format": {"type": "topojson", "feature": "data"}
          },
          "projection": {
            "type": "mercator",
            "scale": 3000,
            "center": [-5, 59.5]
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightblue",
            "stroke": "white",
            "strokeWidth": 0.1
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/scotland_stadiums_10k.csv"
          },
          "projection": {
            "type": "mercator",
            "scale": 3000,
            "center": [-5, 59.5]
          },
          "mark": "circle",
          "encoding": {
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "size": {"field": "Capacity", "type": "quantitative"},
            "color": {"value": "darkblue"},
            "tooltip": [
              {"field": "Stadium Name"},
              {"field": "Capacity", "format": ","}
            ]
          }
        }
      ]
    },
    {
      "width": 400,
      "height": 20,
      "layer": [
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "fontSize": 10,
            "color": "#2E294E",
            "text": "Source:"
          },
          "encoding": {"x": {"value": 310}}
        },
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "fontSize": 10,
            "fontStyle": "normal",
            "color": "#2E294E",
            "text": "Wikipedia"
          },
          "encoding": {"x": {"value": 350}}
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}}
}