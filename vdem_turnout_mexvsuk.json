{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/vdem_turnout_mexvsuk.csv"
  },
  "title": "Turnout of elections in Mexico and the United Kingdom (1945-2024)",
  "transform": [
    {"filter": "!(datum.country_name == 'United Kingdom' && datum.year < 1945)"}
  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "year",
      "type": "quantitative",
      "scale": {"domain": [1940, 2025]},
      "axis": {"format": "d"}
    },
    "y": {
      "field": "v2eltrnout",
      "title": "turnout (%)",
      "type": "quantitative",
      "scale": {"zero": false}
    },
    "color": {"field": "country_name", "type": "nominal", "title": "Country"},
    "shape": {"field": "country_name", "type": "nominal"}
  },
  "config": {}
}