{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Crimes in Mexico, by type",
    "subtitle": "Total reported cases, 2015-2024",
    "subtitleColor": "#2E294E",
    "fontSize": 18,
    "font": "sans-serif",
    "anchor": "start",
    "offset": 20
  },
  "background": "#F5F2EB",
  "width": 600,
  "height": 400,
  "padding": {"left": 10, "right": 10, "top": 10, "bottom": 10},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/crime_data_per_year_national.csv",
        "format": {"type": "csv", "parse": {"year": "date:'%Y'"}}
      },
      "transform": [{"filter": "year(datum.year) < 2025"}],
      "mark": {"type": "bar", "tooltip": true, "width": {"band": 0.8}},
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "title": "Year",
          "axis": {
            "format": "%Y",
            "labelFontSize": 10,
            "titleFontSize": 11,
            "grid": false
          },
          "scale": {
            "domain": [{"year": 2014, "month": 6}, {"year": 2024, "month": 6}],
            "nice": false
          }
        },
        "y": {
          "field": "total",
          "type": "quantitative",
          "title": "Total Reported Cases",
          "axis": {
            "labelFontSize": 10,
            "titleFontSize": 11,
            "grid": true,
            "gridColor": "#2E294E",
            "gridOpacity": 0.1
          }
        },
        "color": {
          "field": "type_of_crime",
          "type": "nominal",
          "title": "Type of Crime",
          "scale": {
            "range": [
              "#E4007C",
              "#2E294E",
              "#1B998B",
              "#F1BF3A",
              "#C1666B",
              "#4ECDC4",
              "#D4A574",
              "#8B4789",
              "#F28F3B",
              "#88D9C0",
              "#A8527B",
              "#E8AC65",
              "#5A7A7F",
              "#B85A5F"
            ]
          },
          "legend": {
            "titleFontSize": 11,
            "labelFontSize": 10,
            "symbolSize": 100
          }
        },
        "xOffset": {"field": "type_of_crime"}
      }
    },
    {
      "data": {"values": [{}]},
      "mark": {
        "type": "text",
        "align": "right",
        "x": "width",
        "y": "height",
        "dy": 50,
        "dx": -280,
        "fontSize": 10,
        "color": "#2E294E"
      },
      "encoding": {"text": {"value": "Source: "}}
    },
    {
      "data": {"values": [{}]},
      "mark": {
        "type": "text",
        "align": "right",
        "x": "width",
        "y": "height",
        "dy": 50,
        "fontSize": 10,
        "color": "#2E294E",
        "fontStyle": "italic",
        "dx": 160
      },
      "encoding": {
        "text": {
          "value": "Secretariado Ejecutivo del Sistema Nacional de Seguridad Pública de México, own categorization"
        }
      }
    }
  ],
  "config": {"view": {"stroke": null}, "font": "sans-serif"}
}